<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite thread-count="3" parallel="tests" name="ECS Sanity Suite">
  <parameter name="env" value="ECS_TEST"/>
  <listeners>
    <listener class-name="framework.listeners.CustomTestListener"/>
    <listener class-name="framework.listeners.DynamicDependencyTransformer"/>
    <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
  </listeners>
  <test thread-count="3" parallel="tests" name="Navigate Make A Payment tests">
    <parameter name="env" value="ECS_TEST"/>
    <parameter name="browser" value="Chrome"/>
    <classes>
      <class name="tests.web.ECSScripts">
        <methods>
          <include name="TC03_navigateToMakeAPaymentPage"/>
        </methods>
      </class> <!-- tests.web.ECSScripts -->
    </classes>
  </test> <!-- Navigate Make A Payment tests -->
  <test thread-count="3" parallel="tests" name="Navigate Auto Pay tests">
    <parameter name="env" value="ECS_TEST"/>
    <parameter name="browser" value="Edge"/>
    <classes>
      <class name="tests.web.ECSScripts">
        <methods>
          <include name="TC04_navigateToAutoPayPage"/>
        </methods>
      </class> <!-- tests.web.ECSScripts -->
    </classes>
  </test> <!-- Navigate Auto Pay tests -->
  <test thread-count="3" parallel="tests" name="Navigate Statement tests">
    <parameter name="env" value="ECS_TEST"/>
    <parameter name="browser" value="Chrome"/>
    <classes>
      <class name="tests.web.ECSScripts">
        <methods>
          <include name="TC05_navigateToStatementsPage"/>
        </methods>
      </class> <!-- tests.web.ECSScripts -->
    </classes>
  </test> <!-- Navigate Statement tests -->
</suite> <!-- ECS Sanity Suite -->
